                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Sunday" />

            <TextView
                android:id="@+id/SunAvT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

