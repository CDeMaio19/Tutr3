            <Spinner
                android:id="@+id/MonAvSel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/AppMon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Schedule_app" />

            <TextView
                android:id="@+id/TueT"
